<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Sixtagram" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your light theme here. -->
        <!-- <item name="colorPrimary">@color/my_light_primary</item> -->
        <!--하단 네비게이션바 + 아이콘 색상 지정-->
        <item name="android:navigationBarColor">@color/white</item>
        <item name="android:windowLightNavigationBar" tools:targetApi="o_mr1">true</item>
        <!--상단 스테이터스바 + 아이콘 색상 지정-->
        <item name="android:statusBarColor">@color/white</item>
        <item name="android:windowLightStatusBar" >true</item>

        <item name="background">@color/white</item>
    </style>

    <style name="Theme.Sixtagram" parent="Base.Theme.Sixtagram" />

    <style name="FontSizeTitle">
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="FontSizeLarge">
        <item name="android:textSize">20sp</item>
    </style>

    <style name="FontSizeMedium">
        <item name="android:textSize">16sp</item>
    </style>

    <style name="FontSizeSmall">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="SingUpFont">
        <item name="android:textSize">12sp</item>
    </style>

</resources>